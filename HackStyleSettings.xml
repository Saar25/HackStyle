<hackstyle>
    <values>
        <!-- required -->
        <value>
            <name>DEFAULT-TEXTFIELD</name>
            <content>|&gt;&lt;|</content>
        </value>
        <!-- required -->
        <value>
            <name>DEFAULT-SLIDER</name>
            <content>25</content>
        </value>
        <value>
            <name>DEFAULT-AVATAR</name>
            <content>|&gt;</content>
        </value>
    </values>
    <scripts>
        <script>
            <name>Press</name>
            <indicator>R</indicator>
            <code>
                LOOP -1
                KICK SLIDER
                SLEEP SLIDER
                ENDL
            </code>
        </script>
        <script>
            <name>Double</name>
            <indicator>E</indicator>
            <code>
                LOOP 2
                KICK SLIDER
                SLEEP SLIDER
                ENDL
            </code>
        </script>
        <script>
            <name>Click</name>
            <indicator>R</indicator>
            <code>
                LOOP -1
                CLICK SLIDER
                SLEEP SLIDER
                ENDL
            </code>
        </script>
        <script>
            <name>Spam</name>
            <indicator>R</indicator>
            <code>
                LOOP -1
                WRITE TEXTBAR
                SLEEP SLIDER
                ENDL
            </code>
        </script>
        <script>
            <name>Avatar</name>
            <indicator>Q</indicator>
            <code>
                LOOP -1
                AVATARS TEXTBAR SLIDER
                SLEEP 100
                ENDL
                AVATAR DEFAULT_AVATAR
            </code>
        </script>
    </scripts>
    <hackstyle-scripts>
        <hackstyle-script>
            <title>Avatar</title>
            <runner>avatar</runner>
            <indicator>Q</indicator>
            <speed>SLIDER</speed>
        </hackstyle-script>
    </hackstyle-scripts>
</hackstyle>